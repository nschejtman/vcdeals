# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET          /                      controllers.Application.index()

# Funds
#GET         /fund/view/:id          controllers.FundController.view(id : Long)
GET         /fund/new               controllers.FundController.getCreate()
POST        /fund/new               controllers.FundController.postCreate()
#GET         /fund/update/:id        controllers.FundController.getUpdate(id : Long)
#POST        /fund/update/:id        controllers.FundController.postUpdate(id : Long)
GET         /fund/list              controllers.FundController.list()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
